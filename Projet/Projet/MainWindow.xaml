<Window x:Class="Projet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ListBox1" 
                 ItemsSource="{Binding ProductsList}" 
                 HorizontalAlignment="Left" 
                 Height="257" 
                 Margin="286,67,0,0" 
                 VerticalAlignment="Top" 
                 Width="364">
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image 
                                Width="50"
                                Margin="2"
                                Source="{Binding Picture_url}"/>
                        <TextBlock Text="{Binding Name}"
                                               TextWrapping="Wrap"
                                               Width="125"        
                                               Foreground="#2c3e50"
                                               FontWeight="Bold"
                                               Margin="2" />
                        <TextBlock Text="{Binding Brand}"
                                               TextWrapping="Wrap"
                                               Width="125"        
                                               Foreground="#2c3e50"
                                               FontWeight="Bold"
                                               Margin="2" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="GetAll" Content="Tout charger" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" Click="GetAll_Click" Height="23"/>
        <TextBox x:Name="Barcode" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="3124480182708" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="GetBarCode" Content="Charger" HorizontalAlignment="Left" Margin="135,38,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="GetBarCode_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,67,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="GetDesc" Content="Charger" HorizontalAlignment="Left" Margin="135,67,0,0" VerticalAlignment="Top" Width="75" Height="23"/>
        <Image x:Name="Picture" HorizontalAlignment="Left" Height="100" Margin="30,159,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="200" Click="ResetButton_Click"/>

    </Grid>
</Window>
